      <Uniform ResDependent="None" Max="1000000.0" Min="-1000000.0" Default="1.0" Inc="0.01" Tooltip="" Row="1" Col="2" Page="1" DisplayName="Amplitude" Type="float" Name="additional_rot_amp">
