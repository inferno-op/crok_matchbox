      <Uniform ResDependent="None" Max="1000000.0" Min="-1000000.0" Default="0.3" Inc="0.01" Tooltip="" Row="2" Col="2" Page="0" DisplayName="Frequency" Type="float" Name="rot_frq">
      </Uniform>
	  
      <Uniform Row="0" Col="3" Page="0" Default="True" Tooltip="" DisplayName="Enable" Type="bool" Name="enbl_zoom">
